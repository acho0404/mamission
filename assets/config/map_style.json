[
  /* -----------------------------------------------------------
     GLOBAL CLEAN
  ----------------------------------------------------------- */
  { "featureType": "poi", "stylers": [ { "visibility": "off" } ] },
  { "featureType": "transit", "stylers": [ { "visibility": "off" } ] },
  { "elementType": "labels.icon", "stylers": [ { "visibility": "off" } ] },

  /* -----------------------------------------------------------
     BACKGROUND
  ----------------------------------------------------------- */
  {
    "featureType": "landscape",
    "elementType": "geometry.fill",
    "stylers": [
      { "color": "#E8EBF0" }    /* Fond doux et premium */
    ]
  },
  {
    "featureType": "water",
    "elementType": "geometry.fill",
    "stylers": [
      { "color": "#C9D7E8" }   /* Eau pastel moderne */
    ]
  },

  /* -----------------------------------------------------------
     CITY LABELS — ⭐ Très visibles de loin (Airbnb-like)
  ----------------------------------------------------------- */
  {
    "featureType": "administrative.locality",
    "elementType": "labels.text.fill",
    "stylers": [
      { "color": "#1E1E1E" },      /* très foncé pour lisibilité */
      { "weight": 8.0 }            /* épaisseur “bold” */
    ]
  },
  {
    "featureType": "administrative.locality",
    "elementType": "labels.text.stroke",
    "stylers": [
      { "color": "#FFFFFF" },      /* halo blanc lisible */
      { "weight": 3.0 }
    ]
  },

  /* -----------------------------------------------------------
     COUNTRY + ADMIN
  ----------------------------------------------------------- */
  {
    "featureType": "administrative.country",
    "elementType": "geometry.stroke",
    "stylers": [
      { "color": "#9CA3AF" }       /* gris élégant */
    ]
  },

  /* -----------------------------------------------------------
     ROADS
  ----------------------------------------------------------- */

  /* Highways grossis, premium */
  {
    "featureType": "road.highway",
    "elementType": "geometry.fill",
    "stylers": [
      { "color": "#FDFDFD" }
    ]
  },
  {
    "featureType": "road.highway",
    "elementType": "geometry.stroke",
    "stylers": [
      { "color": "#B8B8B8" },
      { "weight": 1.2 }
    ]
  },

  /* Main Roads */
  {
    "featureType": "road.arterial",
    "elementType": "geometry.fill",
    "stylers": [
      { "color": "#FCFCFC" }
    ]
  },
  {
    "featureType": "road.arterial",
    "elementType": "geometry.stroke",
    "stylers": [
      { "color": "#D0D0D0" },
      { "weight": 1.0 }
    ]
  },

  /* Local roads minimalistes (sans labels) */
  { "featureType": "road.local", "elementType": "labels", "stylers": [ { "visibility": "off" } ] },
  {
    "featureType": "road.local",
    "elementType": "geometry",
    "stylers": [
      { "color": "#FFFFFF" },
      { "weight": 0.4 }
    ]
  },

  /* -----------------------------------------------------------
     PARKS (vert pastel premium)
  ----------------------------------------------------------- */
  {
    "featureType": "poi.park",
    "elementType": "geometry.fill",
    "stylers": [
      { "color": "#DCEED6" }
    ]
  }
]
